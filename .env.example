# ContentCraft AI - Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="ContentCraft AI"

# Database
DATABASE_URL=postgresql://postgres:contentcraft123@localhost:5433/contentcraft

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_ACCESS_SECRET=your-access-secret-min-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-min-32-characters-long
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-64-chars

# n8n
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_WEBHOOK_SECRET=your-webhook-secret
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_ENCRYPTION_KEY=n8n-encryption-key-change-this

# MinIO (S3-Compatible Storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=contentcraft

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-char-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=ContentCraft AI

# LinkedIn OAuth (for social publishing)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Internal API
INTERNAL_SECRET=your-internal-api-secret

# Docker (for production)
DB_PASSWORD=contentcraft123
